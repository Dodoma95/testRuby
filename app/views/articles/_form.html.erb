<%= render "shared/errors", obj: @article%>

    <div class="row">
      <div class="col-md-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |a| %>
        <div class="form-group row">
          <div class="col-form-label col-sm-1">
            <%= a.label :title %><br/>
          </div>
          <div class="col-sm-10 col-sm-1">
            <%= a. text_field :title, class: "form_control", placeholder: "Title of article", autofocus: true %>
          </div>

        </div>
          <div class="form-group row">
            <div class="col-form-label col-sm-1">
          <%= a.label :description %>
            </div>
            <div class="col-sm-10 col-sm-1">
          <%= a.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
            </div>
      </div>
          <div class="form-group">
            <div class="col-sm-10 offset-sm-1">
            <%= a.submit class: "btn btn-primary btn-block"%>
            </div>
    </div>


        <% end %>
        <div align="center">
       [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
        </div>
      </div>
    </div>